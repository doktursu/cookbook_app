<h2>Categories</h2>

<% @categories.each do |category| %>
  <h2><%= link_to category.name, category_path(category) %></h2>
  <%= button_to "Edit", edit_category_path(category), method: :get %>
  <%= button_to "Delete", category_path(category), method: :delete, data: { confirm: "Delete category?" } %>
<% end %>